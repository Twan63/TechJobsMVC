<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />

    @{
        //TODO #4: Loop over the search results to display all job fields.

        @if (ViewBag.Jobs != null)
        {
            @foreach (var jobs in ViewBag.Jobs)
            {
                <div>
                    <table>

                        <tr>
                            <th>Id</th>
                            <td>@jobs.Id</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>@jobs.Name</td>
                        </tr>
                        <tr>
                            <th>Employer</th>
                            <td>@jobs.Employer</td>
                        </tr>
                        <tr>
                            <th>Location</th>
                            <td>@jobs.Location</td>
                        </tr>
                        <tr>
                            <th>Position</th>
                            <td>@jobs.PositionType</td>
                        </tr>

                        <tr>
                            <th>Skill</th>
                            <td>@jobs.CoreCompetency</td>
                        </tr>
                    </table>
                </div>
            }
        }

    }

</div>