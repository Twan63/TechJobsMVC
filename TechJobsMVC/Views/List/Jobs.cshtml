<div class="container body-content">

    <h1>@ViewBag.title</h1>

    @{
        //TODO #1: Use a loop to display job results in a table.
        @foreach (var job in ViewBag.jobs)
        { 
<div>
    <table>
        <tr>
            <th>ID</th>
            <td>@job.Id</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@job.Name</td>
        </tr>

        <tr>
            <th>Employer</th>
            <th>@job.Employer</th>
        </tr>

        <tr>
            <th>Location</th>
            <td>@job.Location</td>
        </tr>

        <tr>

            <th>Position</th>
            <td>@job.PositionType</td>
        </tr>

        <tr>
            <th>Skill</th>
            <td>@job.CoreCompetency</td>
        </tr>
    </table>
</div>
        }
    }


</div>